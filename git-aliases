[alias]

# git standup
# List the commit messages from the last 24 hours for the current user.
standup = !git log \
          --author=$USER \
          --since='yesterday' \
          --before='today' \
          --all \
          --format='%cr - %s'

# git skipci <commit-message>
# Create a commit and prepends `[skip ci]` to the commit message, to skip Travis from
# running once the commit is pushed to `origin` (GitHub).

skipci = "!f() { \
  git commit -am \"[skip ci] $1\"; \
}; f"

# git current-branch
# Echoes the name of the current branch

current-branch = !git symbolic-ref --quiet --short HEAD

# git push-current-branch
# Pushes the current branch to `origin`

push-current-branch = "!f() { \
  git push -u origin $(git current-branch); \
}; f"

# git amend-commit-message <commit-message>
# Amend the commit message of the previous commit

amend-commit-message = "!f() { \
  git commit --amend -m \"$1\"; \
}; f"

# git list-merged-branches <branch-name>
# List local branches already merged to <branch-name>

list-merged-branches = "!f() { \
  git branch --merged $1 | grep --invert-match '\\*'; \
}; f"

# git quick-commit <commit-message>
# Create a signed commit, adding unstaged changes.
quick-commit = "!f() { \
  git commit -S -am "$1"; \
}; f"

# git qc <commit-message>
# Alias for quick-commit
qc = !git quick-commit
